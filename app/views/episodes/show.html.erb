<div class="episode senar">
<p class="data">
  Em√®s el dia
  <%= @episode.aired_on.strftime('%d/%m/%Y') %>
</p>

<h1>
  <%= @episode.title %>
</h1>

<br />

<%= @episode.description %>

<p> <b>Notes de l'episodi:</b></p>
  <%= @episode.notes if !@episode.notes.blank? %>

<br /><br />

<div id="comments">
  <span id="comments_count"><%= @episode.comments.count %> Comentaris</span>
  <%= render :partial => @episode.comments %>
</div>

<div id="comment-notice"></div>

<h2>Digues-hi la teva!</h2>
<% form_for Comment.new(:episode => @episode), :remote => true do |f| %>
	<%= f.hidden_field :episode_id %>
	<%= f.label :name, "Nom" %><br />
	<%= f.text_field :name %><br />
	<%= f.label :email, "Email" %><br />
	<%= f.text_field :email %><br />
	<%= f.label :content, "Comentari" %><br />
	<%= f.text_area :content %><br />
	<%= f.submit "Afegeix comentari" %>
<% end %>

<span style="float:right;">
	<%= link_to 'Modifica episodi', edit_episode_path(@episode) %> |
	<%= link_to 'Enrere', episodes_path %>
</span>
</div>
