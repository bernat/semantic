<%= div_for episode, :class => cycle('senar', 'parell') do %>
  <p class="data">
    <%= pretty_date episode.aired_on %>
  </p>
  <h3><%= link_to "\##{episode.id} #{episode.title}", episode %></h3>

  <% if !list && episode.asset? %>
    <p id="player_<%= episode.id %>">MP3</p>
    <script type="text/javascript">
    $(document).ready(function() {
      AudioPlayer.embed("player_<%= episode.id %>", {soundFile: "<%= episode.asset.url %>"});
    });
    </script>
  <% end %>

  <%= raw markdown(episode.description) %>
  <% if list %>
  <p>
    <%= link_to "Notes de l'episodi", episode if episode.notes %>
    | <%= link_to "#{pluralize(episode.comments.count, "Comentari")}", episode %>
  </p>
  <% else %>
    <% unless episode.notes.empty? %>
      <h4>Notes de l'episodi</h4>
      <%= raw markdown(episode.notes) %>
    <% end %>
  <% end %>
  <%=raw "#{link_to("MP3", episode.asset.url)} (#{number_to_human_size episode.asset.size})" if episode.asset? %>
<% end %>
