<%= div_for screencast, :class => cycle('senar', 'parell') do %>
  <p class="data"><%= pretty_date screencast.published_at %></p>
  <h3><%= link_to "#{screencast.title}", screencast %></h3>
  <%= raw screencast.embedded if @screencast %>
  <%= raw markdown(screencast.description) %>

  <% if @screencast and !screencast.notes.blank? %>
    <hr />
    <a style="color:#333" name="shownotes"><h4>Notes</h4></a>
    <%= raw markdown(screencast.notes) %>
  <% end %>
  <div class="tags">
    <ul>
      <% screencast.tags.each do |tag| %>
        <li><%= link_to	print_tag(tag), tag_path(tag.name) %></li>
      <% end %>
    </ul>
  </div>
<% end %>
