<!DOCTYPE html>
<html>
<head>
  <title>semàntic podcast</title>
  <%= stylesheet_link_tag 'application', 'grid' %>
	<%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js", "jquery-rails.js" %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div class="row">
	  <div id="admin" class="column grid_12">
      <%= yield :admin %>
    </div>
  
    <div id="header" class="column grid_12">
      <h1><%= link_to "semàntic", root_path %></h1>
      <h2><%= link_to "podcast", root_path %></h2>
    </div>
  </div>
	
	<%= render :partial => "shared/presentationbox" %>
  <div id="main" class="row">
    <div class="column grid_9">
      <p class="notice"><%= notice %></p>
      <%= yield %>
    </div>

		<div id="sidebar" class="column grid_3">
			<h3>Sidebar</h3>
		</div>
  </div>


</body>
</html>
